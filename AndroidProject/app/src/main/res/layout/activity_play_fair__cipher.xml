<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aakash.androidproject.MainActivity"
    android:background="@drawable/images">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Plain"
        android:text="@string/plain"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Plain"
        android:layout_alignBaseline="@id/Plain"
        android:layout_marginLeft="25dp"
        android:id="@+id/Edit1"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cipher"
        android:text="@string/cipher"
        android:layout_below="@id/Plain"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Cipher"
        android:layout_alignBaseline="@id/Cipher"
        android:layout_marginLeft="25dp"
        android:id="@+id/Edit2"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button"
        android:layout_marginBottom="25dp"
        android:text="Generate Cipher Text"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Cipher"
        android:onClick="generate_cipher"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button1"
        android:layout_alignBaseline="@+id/Button"
        android:layout_alignBottom="@+id/Button"
        android:layout_toEndOf="@id/Button"
        android:text="Send SMS"
        android:onClick="Send"/>

</RelativeLayout>
